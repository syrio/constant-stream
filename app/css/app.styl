@import 'helpers'


body
  font normal 1em sans-serif
  text-align center
  background-image '/images/bkg.png'

h1
  font-size 2.5em
  font-weight normal
  margin-top 0em
  margin-bottom 0.7em
  color #0057c5
  font-family Pacifico
  text-shadow 0 1px 0 rgba(255,255,255,.8)

.chat
  width 1000px
  text-align left
  vertical-gradient #ddd, #eee
  border 1px solid #ccc
  margin 10px auto
  padding 10px
  round 10px
  .message, .chatlog
    border none
    box-shadow inset 0 0 2px #777
    round 5px
  .message
    width 990px
    padding 5px
    margin 0
  .chatlog
    width 990px
    height 270px
    background-color white
    padding-right 9px
    margin 5px 0
    overflow auto
    p
      font-size 0.9em
      color #000a68
      padding 3px 9px
      margin 0
    pfirst-child
      padding-top 9px
    plast-child
      padding-bottom 9px
  .topic
    margin 0
    cursor default
    text-align center
    text-shadow 1px 1px 18px gray
    font-family Monofett
    font-size 1.5em
    font-weight normal
  .topic:hover
    color #0057C5

.members
  cursor default
  margin-top 10px
  margin-left 45px
  overflow auto
  overflow-x hidden
  height 290px
  width 235px

.members-items-list
  list-style-type none

#currentUser
  height 1.4em
  width 14em
  -webkit-appearance none
  -webkit-box-shadow 1px 1px 1px #fff
  -webkit-border-radius 0.5em

#currentUser::-webkit-input-placeholder  
  font-style italic
#currentUser input:-moz-placeholder 
  font-style italic


#joinedChannel
  height 2em
  margin 20px
  background #fff
  -webkit-appearance none
  -webkit-box-shadow 1px 1px 1px #fff
  -webkit-border-radius 0.5em


#joinedChannel::-webkit-input-placeholder  
  font-style italic
  text-shadow 0 0 2px black
#joinedChannel input:-moz-placeholder 
  font-style italic

#join
  display none
  padding 30px

.controls
  float left
  width 100%
  background #fff
  overflow hidden
  position relative
  
.controls ul
  clear left
  float left
  list-style none
  margin 0
  padding 0
  position relative
  left 50%
  text-align center
  
.controls li
  display block
  float left
  list-style none
  margin-left 50px
  padding 0
  position relative
  right 50%

.controls p
  height 1.4em
  width 16.5em
  vertical-gradient #ddd, #eee
  border 1px solid #ccc
  margin 10px auto
  padding 10px
  round 10px
  text-shadow 0 1px 0 rgba(255,255,255,.8)

.success
  color #4CBB17
.error
  color #C20303

